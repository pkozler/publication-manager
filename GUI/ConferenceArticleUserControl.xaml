<UserControl x:Class="GUI.ConferenceArticleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Label x:Name="bookTitleLabel" Content="Sborník konference:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip=""/>
        <Label x:Name="addressLabel" Content="Místo vydání:" HorizontalAlignment="Left" Margin="53,39,0,0" VerticalAlignment="Top" ToolTip=""/>
        <Label x:Name="publisherLabel" Content="Nakladatel:" HorizontalAlignment="Left" Margin="67,68,0,0" VerticalAlignment="Top" ToolTip=""/>
        <Label x:Name="fromPageLabel" Content="Strany:" HorizontalAlignment="Left" Margin="96,97,0,0" VerticalAlignment="Top"/>
        <Label x:Name="toPageLabel" Content="až" Margin="0,97,114,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Label x:Name="identificationLabel" Content="Identifikátor:" HorizontalAlignment="Left" Margin="53,126,0,0" VerticalAlignment="Top" ToolTip=""/>
        <TextBox x:Name="bookTitleTextBox" Height="23" Margin="157,16,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Zadejte název sborníku konference s citovaným článkem."/>
        <TextBox x:Name="addressTextBox" Height="23" Margin="157,45,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Zadejte místo vydání sborníku."/>
        <TextBox x:Name="publisherTextBox" Height="23" Margin="157,74,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Zadejte jméno nakladatele sborníku."/>
        <TextBox x:Name="fromPageTextBox" Height="23" Margin="0,103,144,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="99" ToolTip="Zadejte číslo strany, na které začíná citovaný text."/>
        <TextBox x:Name="toPageTextBox" HorizontalAlignment="Right" Height="23" Margin="0,103,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" ToolTip="Zadejte číslo strany, na které končí citovaný text."/>
        <TextBox x:Name="identificationTextBox" Margin="157,132,10,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" ToolTip="Zadejte identifikační číslo sborníku (ISBN, nebo ISSN)."/>
        <Label x:Name="identificationTypeLabel" Content="Typ identifikátoru:" HorizontalAlignment="Right" Margin="0,160,111,0" VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Right" Height="13" Margin="0,168,6,0" VerticalAlignment="Top" Width="100" Orientation="Horizontal" ToolTip="Zvolte typ zadaného identifikátoru (tj. zda bylo uvedeno ISBN, nebo ISSN).">
            <RadioButton x:Name="isbnRadioButton" Content="ISBN" HorizontalAlignment="Right" VerticalAlignment="Top" GroupName="identificationTypeGroup" Width="50"/>
            <RadioButton x:Name="issnRadioButton" Content="ISSN" HorizontalAlignment="Right" VerticalAlignment="Top" GroupName="identificationTypeGroup"/>
        </StackPanel>

    </Grid>
</UserControl>
