<Window x:Class="GUI.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Neplatný vstup" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="errorLabel" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="errorListTextBlock" HorizontalAlignment="Stretch" Margin="10,44,10,45" TextWrapping="Wrap" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Foreground="#FFC00000"/>
        <Button x:Name="closeButton" Content="Zavřít" HorizontalAlignment="Right" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" Width="41" RenderTransformOrigin="0.353,0.531" Click="closeButton_Click"/>

    </Grid>
</Window>
