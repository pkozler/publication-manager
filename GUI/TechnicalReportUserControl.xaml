<UserControl x:Class="GUI.TechnicalReportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Label x:Name="addressLabel" Content="Místo vydání:" HorizontalAlignment="Left" Margin="77,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="institutionLabel" Content="Vydavatel:" HorizontalAlignment="Left" Margin="97,39,0,0" VerticalAlignment="Top"/>
        <Label x:Name="numberLabel" Content="Označení a číslo zprávy:" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addressTextBox" Height="23" Margin="181,16,10,0" VerticalAlignment="Top" ToolTip="Zadejte místo vydání citované zprávy."/>
        <TextBox x:Name="institutionTextBox" Height="23" Margin="181,45,10,0" VerticalAlignment="Top" ToolTip="Zadejte název instituce vydávající citovanou zprávu."/>
        <TextBox x:Name="numberTextBox" Margin="181,74,10,0" Height="23" VerticalAlignment="Top" ToolTip="Zadejte označení citované zprávy spolu s číslem."/>

    </Grid>
</UserControl>
