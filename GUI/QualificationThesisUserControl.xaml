<UserControl x:Class="GUI.QualificationThesisUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Label x:Name="addressLabel" Content="Místo vytvoření:" HorizontalAlignment="Left" Margin="49,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="schoolLabel" Content="Název školy:" HorizontalAlignment="Left" Margin="74,39,0,0" VerticalAlignment="Top"/>
        <Label x:Name="thesisTypeLabel" Content="Typ kvalifikační práce:" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addressTextBox" Height="23" Margin="171,16,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Zadejte místo vytvoření citované práce."/>
        <TextBox x:Name="schoolTextBox" Height="23" Margin="171,45,10,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Zadejte název školy, na které byla citovaná práce vytvořena."/>
        <StackPanel HorizontalAlignment="Right" Height="15" Margin="0,76,4,0" VerticalAlignment="Top" Width="225" Orientation="Horizontal" ToolTip="Zvolte, jakého typu je citovaná práce.">
            <RadioButton x:Name="masterThesisRadioButton" Content="Diplomová práce" HorizontalAlignment="Right" VerticalAlignment="Top" GroupName="thesisTypeGroup" Width="115"/>
            <RadioButton x:Name="phdThesisRadioButton" Content="Disertační práce" HorizontalAlignment="Right" VerticalAlignment="Top" GroupName="thesisTypeGroup"/>
        </StackPanel>

    </Grid>
</UserControl>
